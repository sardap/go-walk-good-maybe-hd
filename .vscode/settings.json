{
	"emeraldwalk.runonsave": {
		"commands": [
			{
				"match": "(components..*?\\.go)|(gen.codegen.main.go)$",
				"notMatch": "gen\\.go$",
				"cmd": "cd ${workspaceFolder} && go run ${workspaceFolder}/gen ${workspaceFolder} components",
			},
		],
		"autoClearConsole": true,
	},
	"files.watcherExclude": {
		"**/.git/objects/**": true,
		"**/.git/subtree-cache/**": true,
		"**/node_modules/*/**": true,
		"**/.hg/store/**": true,
		"gen.go": true
	}
}